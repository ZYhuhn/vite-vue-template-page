{
  "files.autoSave": "onWindowChange",
  "files.eol": "\n",
  "files.associations": {
    ".prettierrc": "jsonc",
    "*.tsx": "typescriptreact",
    "*.json": "jsonc"
  },
  // 默认格式化工具选择 prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 保存的时候自动格式化
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.guides.bracketPairs": true,

  "eslint.options": {
    "extensions": [".js", ".vue", ".ts"]
  },
  "eslint.validate": ["javascript", "vue", "typescript", "html", "vue-html"],
  "eslint.workingDirectories": [
    ".eslintrc.js",
    {
      "mode": "auto"
    }
  ],
  "eslint.nodePath": "",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  // 配置stylelint检查的文件类型范围
  "stylelint.validate": ["vue", "less", "css", "html", "scss", "sass"],

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "i18n-ally.displayLanguage": "zh-CN",
  "i18n-ally.localesPaths": ["src/locales", "src/lang"],

  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  "typescript.updateImportsOnFileMove.enabled": "always",

  // 控制相关文件嵌套展示
  "explorer.fileNesting.enabled": true, // 控制文件嵌套启用
  "explorer.fileNesting.expand": false, // 控制嵌套的文件是否被默认展开
  "explorer.fileNesting.patterns": {
    "*.env": ".env.*",
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,.gitattributes,.gitignore,.gitpod.yml,CNAME,.npmrc,.browserslistrc",
    ".eslintrc.js": ".eslintignore,.prettierignore,.stylelintignore,.commitlintrc.*,.prettierrc.*,.stylelintrc.*,.eslintrc-auto-import.json,.editorconfig,.commitlint.cjs",
    "vite.config.ts": "tsconfig.*.json,uno.config.ts,tsconfig.json"
  }
}
