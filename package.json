{
  "name": "vite-vue-template",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://nfym.github.io/vite-vue-template-page",
  "scripts": {
    "cz": "czg",
    "serve": "npm run dev",
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "deplay": "pnpm build && gh-pages -d dist",
    "gh-pages": "gh-pages -d dist",
    "report": "cross-env REPORT=true npm run build",
    "preview": "vite preview",
    "lint": "pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:prettier && pnpm type:check",
    "type:check": "vue-tsc --skipLibCheck",
    "lint:eslint": "eslint --cache --fix --max-warnings 10 \"{src,mock}/**/*.{vue,ts,tsx}\"  --cache-location node_modules/.cache/eslint/",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache-location node_modules/.cache/stylelint/",
    "lint:lint-staged": "lint-staged",
    "clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
    "clean:lib": "rimraf node_modules",
    "reinstall": "rimraf pnpm-lock.yaml && rimraf package.lock.json && rimraf node_modules && pnpm install",
    "prepare": "husky install"
  },
  "dependencies": {
    "ant-design-vue": "4.x",
    "pinia": "^2.1.6",
    "resize-observer-polyfill": "^1.5.1",
    "vue": "^3.3.4",
    "vue-i18n": "9",
    "vue-router": "4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@nabla/vite-plugin-eslint": "^2.0.2",
    "@plugin-web-update-notification/vite": "^1.6.4",
    "@types/node": "^18.11.12",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "cross-env": "^7.0.3",
    "cz-git": "^1.4.1",
    "czg": "^1.4.1",
    "eslint": "^8.30.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.8.0",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.2",
    "less": "^4.2.0",
    "lint-staged": "^13.1.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.1",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "stylelint": "^15.10.3",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-less": "^1.0.0",
    "stylelint-order": "^5.0.0",
    "terser": "^5.16.1",
    "typescript": "^4.6.4",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^4.4.9",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.0.16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:eslint",
      "pnpm lint:prettier"
    ],
    "*.vue": [
      "pnpm lint:eslint",
      "pnpm lint:stylelint",
      "pnpm lint:prettier",
      "pnpm type:check"
    ],
    "*.{scss,less,styl,html}": [
      "pnpm lint:stylelint",
      "pnpm lint:prettier"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
